{
  "compilerOptions": {
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "removeComments": false,
    "outDir": "./build",
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true
  },
  "include": [
    "src", "test"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
